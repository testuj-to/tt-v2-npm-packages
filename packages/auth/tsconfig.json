{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "./build",
        "declarationDir": "./build/typings",
        "declaration": true,
        "strict": false,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "lib": [
            "es2015",
            "es2015.promise",
            "dom"
        ]
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}